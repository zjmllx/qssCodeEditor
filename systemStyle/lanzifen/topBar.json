{
  "QWidget": {
    "background-color": "#BFACE2"
  },
  "QPushButton": {
    "border": "none",
    "border-radius": "5px",
    "padding": "5px",
    "background-color": "#BFACE2",
    "color": "#E0E0E0"
  },
  "QPushButton:hover": {
    "background-color": "#A98BF5"
  },
  "QPushButton:pressed": {
    "background": "#8971C7"
  },
  "QPushButton::menu-indicator": {
    "image": "none",
    "width": "0px"
  }
}
