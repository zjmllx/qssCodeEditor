{
  "QMenu": {
    "background-color": "#F0F0F0",
    "border": "1px solid #CCCCCC",
    "border-radius": "5px",
    "font-size": "10pt",
    "padding": "2px",
    "font-family": "楷体"
  },
  "QMenu::item": {
    "background-color": "transparent",
    "color": "#333333",
    "min-width": "100px",
    "min-height": "30px",
    "padding-left": "5px",
    "border-radius": "5px",
    "padding-right": "20px"
  },
  "QMenu::item:selected": {
    "background-color": "#D6D6D6",
    "color": "#000000"
  },
  "QMenu::separator": {
    "height": "1px",
    "background": "#CCCCCC",
    "margin": "5px 0"
  },
  "QMenu::icon": {
    "width": "16px",
    "height": "16px",
    "margin-left": "10px"
  }
}
