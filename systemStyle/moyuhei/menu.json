{
  "QMenu": {
    "background-color": "#263238",
    "border": "1px solid #004D40",
    "border-radius": "5px",
    "font-size": "10pt",
    "padding": "2px",
    "font-family": "宋体"
  },
  "QMenu::item": {
    "background-color": "transparent",
    "color": "#E0E0E0",
    "min-width": "100px",
    "min-height": "30px",
    "padding-left": "5px",
    "border-radius": "5px",
    "padding-right": "20px"
  },
  "QMenu::item:selected": {
    "background-color": "#004D40",
    "color": "#E0E0E0"
  },
  "QMenu::separator": {
    "height": "1px",
    "background": "#444444",
    "margin": "5px 0"
  },
  "QMenu::icon": {
    "width": "16px",
    "height": "16px",
    "margin-left": "10px"
  }
}
